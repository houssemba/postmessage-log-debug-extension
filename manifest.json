{
  "name": "PostMessage log and debug",
  "version": "0.1",
  "description": "PostMessage log and debug extension",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_title": "PostMessage logger extension"
  },
  "permissions": [
    "tabs", "<all_urls>"
  ],
  "manifest_version": 2
}